<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_cardView"
    android:gravity="center"
    tools:context=".ui.main.SplashScreenActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/filmlogo"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo_app" />

    <TextView
        android:id="@+id/tv_splash_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/applogo"
        android:text="@string/tv_splash_screen"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:fontFamily="@font/nexademobold" />

</RelativeLayout>