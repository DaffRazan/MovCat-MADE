<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.FavoriteMoviesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rv_backgroundColor"
        tools:listitem="@layout/items_movies" />

    <TextView
        android:id="@+id/tv_film_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:fontFamily="@font/nexademobold"
        android:text="@string/no_movie_found"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:visibility="visible" />

</FrameLayout>